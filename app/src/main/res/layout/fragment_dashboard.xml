<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_50"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Blood Glucose and Insulin Concentration"
                android:textColor="@color/blue_900"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Monitored Daily"
                android:textColor="@color/gray_200"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/weight_and_pulse_rate"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/glucose_and_insulin_graph" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Weight and Pulse Rate"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue_900"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Monitored Daily"
                android:textColor="@color/gray_200"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/general_health_status_image"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/general_health_status" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>